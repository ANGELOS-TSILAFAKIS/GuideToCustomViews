<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.zieiony.guide.progresstextview.ProgressTextView_Bad
        android:id="@+id/prgressTextView_bad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#efefef"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="progress"
        android:textSize="12sp"
        app:guide_progress="0.3"
        app:guide_progressColor="@color/colorPrimary"
        app:guide_progressTextColor="#ffffff" />

    <com.github.zieiony.guide.progresstextview.ProgressTextView_Medium
        android:id="@+id/prgressTextView_medium"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="#efefef"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:guide_progress="0.3"
        app:guide_progressColor="@color/colorPrimary"
        app:guide_progressTextColor="#ffffff"
        app:guide_text="progress"
        app:guide_textSize="12sp" />

    <com.github.zieiony.guide.progresstextview.ProgressTextView_Good
        android:id="@+id/prgressTextView_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#efefef"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        app:guide_progress="0.3"
        app:guide_progressColor="@color/colorPrimary"
        app:guide_progressTextColor="#ffffff"
        app:guide_text="progress"
        app:guide_textSize="12sp" />
</LinearLayout>